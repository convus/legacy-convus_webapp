- assertions ||= @assertions

.full-screen-table
  %table.table.table-striped.table-sm.table-bordered
    %thead
      %th
        Assertion
      %th
        Created
      %th
        Citation
    %tbody
      - assertions.each do |assertion|
        %tr
          %td
            = assertion.title
          %td
            %span.convertTime
              = l assertion.created_at, format: :convert_time
          %td
            - citation = assertion.citations.first
            - if citation.present?
              = link_to citation.title, citation.url
