%h1
  = @citation.title

.max-main-width
  %table.table-list
    %tbody
      %tr
        %td Title
        %td= @citation.title
      %tr
        %td URL
        %td
          = link_to UrlHelper.pretty_url(@citation.url), @citation.url
      %tr
        %td Publication
        %td
          - if @citation.publication.present?
            = link_to @citation.publication.title, publication_path(@citation.publication)
      %tr
        %td Kind
        %td= @citation.kind_humanized
      %tr
        %td Authors
        %td
          - if @citation.authors.present?
            %ul
              - @citation.authors.each do |author|
                %li
                  = author
      %tr
        %td Hypotheses
        %td= @hypotheses.count


= render partial: "/hypotheses/table", locals: { citations: @hypotheses }
