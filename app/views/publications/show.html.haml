%h1 Publication

.row
  .col-md-6
    %table.table-list
      %tbody
        %tr
          %td Title
          %td= @publication.title
        - if current_user&.developer?
          %tr.only-dev-visible
            %td ID
            %td= @publication.id
        %tr
          %td Retractions?
          %td= check_mark if @publication.has_published_retractions
        %tr
          %td peer-reviewed?
          %td= check_mark if @publication.has_peer_reviewed_articles
        %tr
          %td Impact factor
          %td
            - if @publication.impact_factor.present? && @publication.impact_factor > 0
              = @publication.impact_factor
        %tr
          %td Urls
          %td
            = link_to @publication.home_url, @publication.home_url
            - if @publication.base_domains.present?
              %ul
                - @publication.base_domains.each do |d|
                  %li
                    %code= d
        %tr
          %td Citations
          %td= @citations.count

.mt-4

%h2 Citations

= render partial: "/citations/table", locals: { citations: @citations }
